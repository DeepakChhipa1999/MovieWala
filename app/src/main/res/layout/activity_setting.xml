<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/tv_setting"
        android:layout_below="@+id/tool_bar"
        android:textColor="@color/colorIndicator"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Interface"/>
    <TextView
        android:id="@+id/tv_setting1"
        android:layout_below="@+id/tv_setting"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Language"/>
    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_setting1"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/colorGray"/>

    <TextView
        android:id="@+id/tv_setting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setting1"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="-10dp"
        android:text="Use System Language"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/tv_setting3"
        android:layout_below="@+id/view"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Quality"/>
    <TextView
    android:id="@+id/tv_setting4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_setting3"
        android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="-10dp"
    android:text="High"
        android:textColor="@color/colorGray"
    android:textSize="@dimen/_12sdp" />
    <TextView
    android:id="@+id/tv_setting5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_setting4"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_18sdp"
    android:text="Application"
        android:textStyle="bold"
    android:textColor="@color/colorIndicator"
    android:textSize="@dimen/_12sdp" />
    <TextView
        android:id="@+id/tv_setting6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setting5"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="Include Adult"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_15sdp" />
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setting6"
        android:orientation="horizontal">
    <TextView
    android:id="@+id/tv_setting7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="2dp"
    android:text="Use System Language"
    android:textColor="@color/colorGray"
    android:textSize="@dimen/_12sdp" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorGray"
        android:layout_below="@+id/relative"
        android:layout_marginTop="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/tv_setting8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="Clear application Cache"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_15sdp"  />
    <TextView
        android:id="@+id/tv_setting9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setting8"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="Clear all cache data for movies,tv showsa nd people"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/_12sdp" />
    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_setting9"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/colorGray"/>


</RelativeLayout>